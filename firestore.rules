rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to user_accounts and user_progress collections
    // This is necessary since the app doesn't use Firebase Authentication
    match /user_accounts/{username} {
      allow read, write: if true;
    }
    
    match /user_progress/{username} {
      allow read, write: if true;
    }
    
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}